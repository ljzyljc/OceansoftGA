<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@anim/anim_login_dlg</item>
    </style>
    <style name="ThemeDialog">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="titleStyle">
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">#2C3135</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="content_text_Style">
        <item name="android:textSize">@dimen/content_textSize</item>
        <item name="android:textColor">#2C3135</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="time_text_Style">
        <item name="android:textSize">@dimen/small_textSize</item>
        <item name="android:textColor">@color/graylight</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
